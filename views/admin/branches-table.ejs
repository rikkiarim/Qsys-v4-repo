<table class="branches-table"
  style="width:100%; border-collapse:separate; border-spacing:0; background:#D6EFD8; border-radius: 18px; overflow: hidden; box-shadow:0 1px 6px rgba(80,141,78,0.03); font-size:1rem;">
  <thead>
    <tr style="background: #80AF81; color: #fff; font-size: 1.07rem;">
      <th style="padding:.9rem 1rem; text-align:left;">Name</th>
      <th style="padding:.9rem 1rem; text-align:left;">Code</th>
      <th style="padding:.9rem 1rem; text-align:center;">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% if (branches && branches.length > 0) { %>
      <% branches.forEach(branch => { %>
        <tr style="background:#fff;">
          <form action="/admin/branches/edit/<%= branch.id %>" method="POST" style="display:contents;">
            <td style="padding:.45rem 1rem;">
              <input type="text" name="name" value="<%= branch.name %>"
                style="width: 170px; padding: 0.32rem 0.7rem; border-radius: 7px; border:1px solid #AC8968; font-size:.98em;">
            </td>
            <td style="padding:.45rem 1rem;">
              <input type="text" name="code" value="<%= branch.code %>"
                style="width: 120px; padding: 0.32rem 0.7rem; border-radius: 7px; border:1px solid #AC8968; font-size:.98em;">
            </td>
            <td style="padding:.45rem 1rem; text-align:center;">
              <button type="submit"
                style="background: #508D4E; color: #fff; border: none; border-radius: 7px; padding: .32rem 1.1rem; font-weight: 700; font-size: .99em; cursor:pointer; margin-right:7px; vertical-align:middle;">Save</button>
          </form>
              <form action="/admin/branches/delete/<%= branch.id %>" method="POST" style="display:inline;">
                <button type="submit"
                  onclick="return confirm('Delete this branch?');"
                  style="background: #AC8968; color: #fff; border: none; border-radius: 7px; padding: .32rem 1.1rem; font-weight: 700; font-size: .99em; cursor:pointer; vertical-align:middle;">Delete</button>
              </form>
            </td>
        </tr>
      <% }) %>
    <% } else { %>
      <tr>
        <td colspan="3" style="text-align:center; padding:2rem; color: #93785B;">No branches found.</td>
      </tr>
    <% } %>
  </tbody>
</table>
